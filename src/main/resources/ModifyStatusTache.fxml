<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="166.0" prefWidth="183.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ModifyStatusController">
    <children>
        <Label text="Select New Task Status:" />

        <RadioButton fx:id="radioAFaire" text="À faire" />
        <RadioButton fx:id="radioEnCours" text="En cours" />
        <RadioButton fx:id="radioTerminee" text="Terminée" />

        <Button onAction="#saveStatus" styleClass="button-action-add" stylesheets="@stylesProjet.css" text="Save" />
    </children>
</VBox>
