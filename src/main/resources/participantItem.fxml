<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="employeeItem" prefHeight="135.0" prefWidth="247.0" styleClass="employee-item" stylesheets="@employee.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ParticipantItemController">
    <children>
        <HBox alignment="CENTER_LEFT" layoutX="54.0" layoutY="40.0" spacing="10">
            <ImageView fx:id="profilePhoto" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" styleClass="profilePhoto" />
            <VBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="firstName" stylesheets="@employee.css" text="First Name: John">
                    <font>
                        <Font name="Tahoma" size="14.0" />
                    </font>
                    <styleClass>
                        <String fx:value="firstName" />
                        <String fx:value="employee-label" />
                    </styleClass>
                </Label>
                <Label fx:id="lastName" stylesheets="@employee.css" text="Last Name: Doe">
                    <font>
                        <Font name="Tahoma" size="14.0" />
                    </font>
                    <styleClass>
                        <String fx:value="lastName" />
                        <String fx:value="employee-label" />
                    </styleClass>
                </Label>
                <Label fx:id="position" stylesheets="@employee.css" text="Position: Developer">
                    <font>
                        <Font name="Tahoma" size="14.0" />
                    </font>
                    <styleClass>
                        <String fx:value="position" />
                        <String fx:value="employee-label" />
                    </styleClass>
                </Label>
            </VBox>
        </HBox>
    </children>
</AnchorPane>
