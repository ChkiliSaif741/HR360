<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ListeOffresController" stylesheets="@/Styles/style3.css" styleClass="root" alignment="CENTER" spacing="20" prefWidth="800" prefHeight="600">
    <HBox spacing="10" alignment="CENTER">
        <ImageView>
            <Image url="@icons/briefcase.gif" />
            <fitWidth>50</fitWidth>
            <fitHeight>50</fitHeight>
        </ImageView>
        <!-- Titre Gestion des offres -->
        <Label text="Gestion des offres" styleClass="t-label" />
    </HBox>

    <!-- Bande colorée en haut -->
    <Region fx:id="topBand" styleClass="top-band" />

    <!-- ListView -->
    <ListView fx:id="listViewOffres" prefHeight="400" prefWidth="600" styleClass="modernListView"/>

    <!-- HBox pour les boutons, centrée -->
    <HBox alignment="CENTER" spacing="20">
        <!-- Bouton Modifier avec icône -->
        <Button fx:id="btnModifier" text="Modifier" onAction="#modifierOffre" styleClass="modernButton">
            <graphic>
                <ImageView fx:id="imageViewModifier">
                    <Image url="@icons/edit.png"/>
                    <fitWidth>20</fitWidth>
                    <fitHeight>20</fitHeight>
                </ImageView>
            </graphic>
        </Button>

        <!-- Bouton Supprimer avec icône -->
        <Button fx:id="btnSupprimer" text="Supprimer" onAction="#supprimerOffre" styleClass="modernButton">
            <graphic>
                <ImageView fx:id="imageViewSupprimer">
                    <Image url="@icons/delete.png"/>
                    <fitWidth>20</fitWidth>
                    <fitHeight>20</fitHeight>
                </ImageView>
            </graphic>
        </Button>
    </HBox>


</VBox>
