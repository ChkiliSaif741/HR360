<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Region?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.ListeOffresController" stylesheets="@/Styles/style3.css" styleClass="root" alignment="CENTER" spacing="20" prefWidth="800" prefHeight="600">

    <!-- Titre Gestion des offres -->
    <Label text="Gestion des offres" styleClass="t-label" />

    <!-- Bande colorée en haut -->
    <Region fx:id="topBand" styleClass="top-band" />

    <!-- ListView -->
    <ListView fx:id="listViewOffres" prefHeight="400" prefWidth="600" styleClass="modernListView"/>

    <!-- HBox pour les boutons, centrée -->
    <HBox alignment="CENTER" spacing="20">
        <Button text="Modifier" onAction="#modifierOffre" styleClass="modernButton"/>
        <Button text="Supprimer" onAction="#supprimerOffre" styleClass="modernButton"/>
    </HBox>
</VBox>
