                  <Label fx:id="DateStart" text="Date debut">
                     <font>
                        <Font size="32.0" />
                     </font>
                  </Label>
                  <FontAwesomeIcon glyphName="ARROW_RIGHT" size="3em" />
                  <Label fx:id="DateEnd" layoutX="212.0" layoutY="10.0" text="Date fin">
