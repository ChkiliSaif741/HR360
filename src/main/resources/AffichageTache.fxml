                  <FontAwesomeIcon fill="WHITE" glyphName="PLUS" size="2em" />
               </graphic>
            </Button>
            <Button onAction="#Prioritize" styleClass="button-action-add" stylesheets="@stylesProjet.css" text="Prioritize">
